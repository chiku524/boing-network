---
import '../styles/boing-theme.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Boing Network', description = 'Authentic, decentralized L1 blockchain — built from first principles.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title === 'Boing Network' ? title : `${title} | Boing Network`}</title>
  </head>
  <body>
    <header class="site-header">
      <a href="/" class="logo gradient-text">boing.network</a>
      <nav>
        <a href="/about">About</a>
        <a href="/docs/getting-started">Docs</a>
        <a href="/developers/quickstart">Developers</a>
        <a href="/network/status">Network</a>
        <a href="/community">Community</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Boing Network — Authentic. Decentralized. Optimal. Sustainable.</p>
      <div class="footer-links">
        <a href="https://github.com/chiku524/boing-network" target="_blank" rel="noopener">GitHub</a>
        <a href="https://boing.finance" target="_blank" rel="noopener">boing.finance</a>
        <a href="/docs">Documentation</a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * { box-sizing: border-box; }

  html {
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main { flex: 1; }

  a {
    color: var(--accent-neon);
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: var(--accent-purple);
  }

  code {
    font-family: var(--font-mono);
    background: var(--bg-tertiary);
    padding: 0.2em 0.4em;
    border-radius: 6px;
    font-size: 0.9em;
  }

  .site-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--border-color);
    background: var(--bg-secondary);
  }

  .logo {
    font-weight: 700;
    font-size: 1.25rem;
    filter: drop-shadow(0 0 8px var(--glow-cyan-subtle));
  }

  .logo:hover {
    filter: drop-shadow(0 0 12px var(--glow-cyan));
  }

  .site-header nav { display: flex; gap: 1.5rem; }

  .site-header nav a {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .site-header nav a:hover {
    color: var(--text-primary);
  }

  .site-footer {
    padding: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    color: var(--text-tertiary);
    font-size: 0.875rem;
  }

  .site-footer a {
    color: var(--accent-neon);
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 0.5rem;
  }
</style>
