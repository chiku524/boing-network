---
import '../styles/boing-theme.css';
import '../styles/design-tokens-cosmic.css';
import BoingCanvasBackground from '../components/BoingCanvasBackground.astro';
import BoingMascot from '../components/BoingMascot.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  /** Design takeover: 'page-landing' = Aquatic-Space bg, 'page-app' = hex grid. Omit = default (animated bg). */
  pageClass?: 'page-landing' | 'page-app';
}

const { title = 'Boing Network', description = 'Boing Network — Authentic. Decentralized. Optimal. Quality-Assured. Authentic L1 blockchain built from first principles.', canonical, pageClass } = Astro.props;

const siteUrl = 'https://boing.network';
const fullTitle = title === 'Boing Network' ? 'Boing Network | Authentic. Decentralized. Optimal. Quality-Assured.' : `${title} | Boing Network`;
const path = (Astro.url.pathname || '/').replace(/\/$/, '') || '';
const canonicalUrl = canonical ? `${siteUrl}${canonical.startsWith('/') ? canonical : '/' + canonical}` : `${siteUrl}${path || '/'}`;
const ogImage = `${siteUrl}/og.png`;
---

<!doctype html>
<html lang="en" class:list={[path === '/' && 'page-home']}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{fullTitle}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Boing Network" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#020408" />
    <meta name="keywords" content="Boing, Boing Network, blockchain, DeFi, L1, cryptocurrency, boing.finance, decentralized finance" />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Boing Network",
      "url": siteUrl,
      "description": "Authentic. Decentralized. Optimal. Quality-Assured. Authentic L1 blockchain built from first principles.",
      "slogan": "Authentic. Decentralized. Optimal. Quality-Assured."
    })} />
  </head>
  <body class:list={[pageClass]}>
    {!pageClass && <BoingCanvasBackground path={path} />}
    <BoingMascot />
    <header class="site-header">
      <a href="/" class="logo">
      <img src="/assets/icon-only-transparent.png" alt="Boing" width="40" height="40" class="logo-icon" />
      <span class="gradient-text">Boing Network</span>
    </a>
      <nav>
        <a href="/docs/getting-started">Docs</a>
        <a href="/developers/quickstart">Developers</a>
        <a href="/network/testnet" class="nav-cta">Join Testnet</a>
        <a href="/network/faucet">Faucet</a>
        <a href="/about">About</a>
        <a href="/community">Community</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Boing Network — Authentic. Decentralized. Optimal. Quality-Assured.</p>
      <div class="footer-links">
        <a href="/network/testnet">Join Testnet</a>
        <a href="/network/faucet">Faucet</a>
        <a href="https://github.com/chiku524/boing-network" target="_blank" rel="noopener">GitHub</a>
        <a href="https://boing.finance" target="_blank" rel="noopener">boing.finance</a>
        <a href="/docs">Documentation</a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * { box-sizing: border-box; }

  html {
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  main { flex: 1; position: relative; z-index: 1; }

  a {
    color: var(--accent-neon);
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: var(--accent-purple);
  }

  code {
    font-family: var(--font-mono);
    background: var(--bg-tertiary);
    padding: 0.2em 0.4em;
    border-radius: 6px;
    font-size: 0.9em;
  }

  .site-header {
    position: relative;
    z-index: 30;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--border-color);
    background: rgba(10, 14, 26, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    box-shadow: 0 4px 20px var(--shadow);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
  }
  .logo-icon {
    flex-shrink: 0;
    display: block;
    width: 40px;
    height: 40px;
    object-fit: contain;
    filter: drop-shadow(0 0 6px var(--glow-cyan-subtle));
  }

  .logo:hover .logo-icon {
    filter: drop-shadow(0 0 10px var(--glow-cyan));
  }

  .site-header nav {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .site-header nav a {
    color: var(--text-secondary);
    font-weight: 500;
    padding: 0.35rem 0;
    line-height: 1.5;
    display: inline-block;
  }

  .site-header nav a:hover,
  .site-header nav a.active {
    color: var(--accent-teal);
  }

  /* Cosmic Foundation: primary CTA = violet → cyan gradient */
  .site-header nav a.nav-cta {
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-pill, 999px);
    font-weight: 600;
    color: white;
    background: linear-gradient(135deg, var(--accent-teal), var(--accent-cyan));
    border: none;
    box-shadow: 0 0 20px rgba(124, 58, 237, 0.3);
    transition: all var(--motion-transition);
  }

  .site-header nav a.nav-cta:hover {
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 0 28px rgba(124, 58, 237, 0.5);
  }

  /* Shared Join Testnet / primary CTA (hero, banners) — Cosmic gradient */
  .btn-testnet {
    color: white !important;
    background: linear-gradient(135deg, var(--accent-teal), var(--accent-cyan)) !important;
    border: none !important;
    font-weight: 600;
    box-shadow: 0 0 20px rgba(124, 58, 237, 0.3);
    transition: all var(--motion-transition);
  }
  .btn-testnet:hover {
    color: white !important;
    transform: translateY(-1px);
    box-shadow: 0 0 28px rgba(124, 58, 237, 0.5);
  }

  @media (prefers-reduced-motion: reduce) {
    .site-header nav a.nav-cta:hover,
    .btn-testnet:hover { transform: none; }
  }

  .site-footer {
    position: relative;
    z-index: 1;
    padding: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    color: var(--text-tertiary);
    font-size: 0.875rem;
  }

  .site-footer a {
    color: var(--accent-neon);
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 0.5rem;
  }
</style>
