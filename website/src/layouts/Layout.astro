---
import '../styles/boing-theme.css';
import EnhancedAnimatedBackground from '../components/EnhancedAnimatedBackground.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const { title = 'Boing Network', description = 'Boing Network — The DeFi that always bounces back. Authentic L1 blockchain built from first principles.', canonical } = Astro.props;

const siteUrl = 'https://boing.network';
const fullTitle = title === 'Boing Network' ? 'Boing Network | The DeFi that always bounces back' : `${title} | Boing Network`;
const path = (Astro.url.pathname || '/').replace(/\/$/, '') || '';
const canonicalUrl = canonical ? `${siteUrl}${canonical.startsWith('/') ? canonical : '/' + canonical}` : `${siteUrl}${path || '/'}`;
const ogImage = `${siteUrl}/og.png`;
---

<!doctype html>
<html lang="en" class:list={[path === '/' && 'page-home']}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{fullTitle}</title>

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Boing Network" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#0f172a" />
    <meta name="keywords" content="Boing, Boing Network, blockchain, DeFi, L1, cryptocurrency, boing.finance, decentralized finance" />

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Boing Network",
      "url": siteUrl,
      "description": "The DeFi that always bounces back. Authentic L1 blockchain built from first principles.",
      "slogan": "The DeFi that always bounces back"
    })} />
  </head>
  <body>
    <EnhancedAnimatedBackground />
    <header class="site-header">
      <a href="/" class="logo">
      <img src="/logo.svg" alt="Boing" width="36" height="36" class="logo-icon" />
      <span class="gradient-text">Boing Network</span>
    </a>
      <nav>
        <a href="/docs/getting-started">Docs</a>
        <a href="/developers/quickstart">Developers</a>
        <a href="/network/testnet" class="nav-cta">Join Testnet</a>
        <a href="/network/faucet">Faucet</a>
        <a href="/about">About</a>
        <a href="/community">Community</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Boing Network — The DeFi that always bounces back. Authentic. Decentralized. Optimal. Sustainable.</p>
      <div class="footer-links">
        <a href="/network/testnet">Join Testnet</a>
        <a href="/network/faucet">Faucet</a>
        <a href="https://github.com/chiku524/boing-network" target="_blank" rel="noopener">GitHub</a>
        <a href="https://boing.finance" target="_blank" rel="noopener">boing.finance</a>
        <a href="/docs">Documentation</a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * { box-sizing: border-box; }

  html {
    font-family: var(--font-sans);
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  main { flex: 1; position: relative; z-index: 1; }

  a {
    color: var(--accent-neon);
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: var(--accent-purple);
  }

  code {
    font-family: var(--font-mono);
    background: var(--bg-tertiary);
    padding: 0.2em 0.4em;
    border-radius: 6px;
    font-size: 0.9em;
  }

  .site-header {
    position: relative;
    z-index: 30;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem 2rem;
    border-bottom: 1px solid rgba(6, 182, 212, 0.3);
    background: var(--bg-primary);
    backdrop-filter: blur(8px);
    box-shadow: 0 4px 20px rgba(6, 182, 212, 0.1);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
  }
  .logo-icon {
    flex-shrink: 0;
    filter: drop-shadow(0 0 6px var(--glow-cyan-subtle));
  }

  .logo:hover .logo-icon {
    filter: drop-shadow(0 0 10px var(--glow-cyan));
  }

  .site-header nav {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .site-header nav a {
    color: var(--text-secondary);
    font-weight: 500;
    padding: 0.35rem 0;
    line-height: 1.5;
    display: inline-block;
  }

  .site-header nav a:hover {
    color: var(--text-primary);
  }

  .site-header nav a.nav-cta {
    padding: 0.35rem 0.75rem;
    border-radius: 0.5rem;
    font-weight: 600;
    color: var(--accent-gold);
    background: rgba(250, 204, 21, 0.08);
    border: 1px solid rgba(250, 204, 21, 0.4);
    transition: border-color 0.2s, background 0.2s, color 0.2s;
  }

  .site-header nav a.nav-cta:hover {
    color: var(--accent-gold);
    background: rgba(250, 204, 21, 0.14);
    border-color: rgba(250, 204, 21, 0.65);
  }

  /* Shared Join Testnet CTA style (hero, banners) — matches nav-cta */
  .btn-testnet {
    color: var(--accent-gold) !important;
    background: rgba(250, 204, 21, 0.08) !important;
    border: 1px solid rgba(250, 204, 21, 0.4) !important;
    font-weight: 600;
    transition: border-color 0.2s, background 0.2s, color 0.2s;
  }
  .btn-testnet:hover {
    color: var(--accent-gold) !important;
    background: rgba(250, 204, 21, 0.14) !important;
    border-color: rgba(250, 204, 21, 0.65) !important;
    filter: none;
  }

  .site-footer {
    position: relative;
    z-index: 1;
    padding: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    color: var(--text-tertiary);
    font-size: 0.875rem;
  }

  .site-footer a {
    color: var(--accent-neon);
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 0.5rem;
  }
</style>
