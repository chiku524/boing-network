<style>
  /* Section-by-section scroll snap (homepage only) */
  :global(html.page-home) { scroll-snap-type: y mandatory; scroll-behavior: smooth; }
  :global(html.page-home) .hero,
  :global(html.page-home) .section { scroll-snap-align: start; scroll-snap-stop: always; min-height: 100vh; }

  /* Hero + animation */
  .hero { position: relative; text-align: center; padding: 5rem 2rem; overflow: hidden; }
  .hero-bg { position: absolute; inset: 0; pointer-events: none; }
  .hero-orb { position: absolute; border-radius: 50%; filter: blur(80px); opacity: 0.4; animation: float 20s ease-in-out infinite; }
  .hero-orb-1 { width: 400px; height: 400px; background: radial-gradient(circle, #06b6d4 0%, transparent 70%); top: -20%; left: 10%; animation-delay: 0s; }
  .hero-orb-2 { width: 300px; height: 300px; background: radial-gradient(circle, #3b82f6 0%, transparent 70%); bottom: -10%; right: 15%; animation-delay: -7s; }
  .hero-orb-3 { width: 250px; height: 250px; background: radial-gradient(circle, #8b5cf6 0%, transparent 70%); top: 30%; right: 5%; animation-delay: -14s; }
  @keyframes float { 0%, 100% { transform: translate(0, 0) scale(1); } 33% { transform: translate(30px, -20px) scale(1.05); } 66% { transform: translate(-20px, 15px) scale(0.95); } }
  /* Shooting stars ‚Äî gradient lines inspired by boing.finance */
  .shooting-star { position: absolute; width: 0; height: 0; overflow: visible; }
  .shooting-star-line {
    position: absolute; width: 128px; height: 2px; left: 0; top: 0;
    border-radius: 1px;
    transform-origin: left center;
  }
  /* Each line rotation matches keyframe movement. Angles: 0¬∞=right, 90¬∞=down, 180¬∞=left. vw units preserve angle. */
  .line-1 { background: linear-gradient(to right, transparent, rgba(34,211,238,0.5), rgba(6,182,212,0.9)); box-shadow: 0 0 8px rgba(6,182,212,0.4); transform: rotate(-16deg); } /* -16¬∞ ‚Üí‚Üó */
  .line-2 { background: linear-gradient(to left, transparent, rgba(59,130,246,0.5), rgba(59,130,246,0.9)); box-shadow: 0 0 8px rgba(59,130,246,0.4); transform-origin: right center; transform: rotate(-55deg); } /* 125¬∞ ‚Üê‚Üô */
  .line-3 { background: linear-gradient(to right, transparent, rgba(139,92,246,0.5), rgba(167,139,250,0.9)); box-shadow: 0 0 8px rgba(139,92,246,0.4); transform: rotate(45deg); } /* 45¬∞ ‚Üí‚Üò */
  .line-4 { background: linear-gradient(to left, transparent, rgba(34,211,238,0.5), rgba(34,211,238,0.9)); box-shadow: 0 0 6px rgba(34,211,238,0.3); transform-origin: right center; transform: rotate(45deg); } /* 225¬∞ ‚Üê‚Üñ */
  .line-5 { background: linear-gradient(to right, transparent, rgba(20,184,166,0.5), rgba(6,182,212,0.9)); box-shadow: 0 0 6px rgba(6,182,212,0.35); transform: rotate(-10deg); } /* -10¬∞ ‚Üí‚Üó */
  .line-6 { background: linear-gradient(to left, transparent, rgba(99,102,241,0.5), rgba(99,102,241,0.9)); box-shadow: 0 0 6px rgba(99,102,241,0.35); transform-origin: right center; transform: rotate(-17deg); } /* 163¬∞ ‚Üê‚Üô */
  .line-7 { background: linear-gradient(to right, transparent, rgba(167,139,250,0.5), rgba(139,92,246,0.9)); box-shadow: 0 0 6px rgba(139,92,246,0.3); transform: rotate(35deg); } /* 35¬∞ ‚Üí‚Üò */
  .line-8 { background: linear-gradient(to left, transparent, rgba(34,211,238,0.5), rgba(34,211,238,0.9)); box-shadow: 0 0 6px rgba(34,211,238,0.3); transform-origin: right center; transform: rotate(45deg); } /* 225¬∞ ‚Üê‚Üñ */
  .shooting-star-1 { top: 25%; left: 0; animation: shoot1 8s linear infinite; opacity: 0.6; }
  .shooting-star-2 { top: 33%; right: 0; animation: shoot2 12s linear infinite; animation-delay: -2s; opacity: 0.5; }
  .shooting-star-3 { bottom: 25%; left: 25%; animation: shoot3 10s linear infinite; animation-delay: -4s; opacity: 0.4; }
  .shooting-star-4 { top: 50%; right: 33%; animation: shoot4 15s linear infinite; animation-delay: -7s; opacity: 0.3; }
  .shooting-star-5 { top: 17%; right: 25%; animation: shoot5 6s linear infinite; animation-delay: -1s; opacity: 0.5; }
  .shooting-star-6 { bottom: 33%; left: 33%; animation: shoot6 9s linear infinite; animation-delay: -5s; opacity: 0.45; }
  .shooting-star-7 { top: 40%; left: 17%; animation: shoot7 11s linear infinite; animation-delay: -6s; opacity: 0.4; }
  .shooting-star-8 { top: 75%; right: 17%; animation: shoot8 14s linear infinite; animation-delay: -9s; opacity: 0.35; }
  .float-particle { position: absolute; border-radius: 50%; background: linear-gradient(to right, #22d3ee, #06b6d4); box-shadow: 0 0 6px rgba(6,182,212,0.4); animation: floatSlow 6s ease-in-out infinite, pulseFade 3s ease-in-out infinite; }
  .float-particle-1 { width: 4px; height: 4px; top: 15%; left: 20%; animation-delay: 0s, 0s; }
  .float-particle-2 { width: 2px; height: 2px; top: 65%; right: 25%; animation-delay: -2s, -0.5s; }
  .float-particle-3 { width: 2px; height: 2px; bottom: 30%; left: 50%; animation-delay: -4s, -1s; }
  .float-particle-4 { width: 3px; height: 3px; top: 40%; left: 25%; background: linear-gradient(to right, #8b5cf6, #7b61ff); box-shadow: 0 0 6px rgba(123,97,255,0.4); animation-delay: -1s, -0.3s; }
  .float-particle-5 { width: 2px; height: 2px; top: 75%; right: 15%; animation-delay: -3s, -0.8s; }
  /* Movement (dx,dy) uses vw so angle stays consistent. dx:dy ratio = tan(angle). */
  @keyframes shoot1 { 0% { transform: translate(0, 0); opacity: 0; } 10% { opacity: 0.6; } 90% { opacity: 0.6; } 100% { transform: translate(100vw, -28vw); opacity: 0; } } /* -16¬∞ */
  @keyframes shoot2 { 0% { transform: translate(0, 0); opacity: 0; } 10% { opacity: 0.5; } 90% { opacity: 0.5; } 100% { transform: translate(-100vw, 143vw); opacity: 0; } } /* 125¬∞ dy/dx=tan(125¬∞)=1.43 */
  @keyframes shoot3 { 0% { transform: translate(0, 0); opacity: 0; } 10% { opacity: 0.4; } 90% { opacity: 0.4; } 100% { transform: translate(100vw, 100vw); opacity: 0; } } /* 45¬∞ */
  @keyframes shoot4 { 0% { transform: translate(0, 0); opacity: 0; } 10% { opacity: 0.3; } 90% { opacity: 0.3; } 100% { transform: translate(-80vw, -80vw); opacity: 0; } } /* 225¬∞ */
  @keyframes shoot5 { 0% { transform: translate(0, 0); opacity: 0; } 5% { opacity: 0.5; } 95% { opacity: 0.5; } 100% { transform: translate(100vw, -18vw); opacity: 0; } } /* -10¬∞ */
  @keyframes shoot6 { 0% { transform: translate(0, 0); opacity: 0; } 8% { opacity: 0.45; } 92% { opacity: 0.45; } 100% { transform: translate(-90vw, 27vw); opacity: 0; } } /* 163¬∞ tan‚âà0.3 */
  @keyframes shoot7 { 0% { transform: translate(0, 0); opacity: 0; } 12% { opacity: 0.4; } 88% { opacity: 0.4; } 100% { transform: translate(100vw, 70vw); opacity: 0; } } /* 35¬∞ */
  @keyframes shoot8 { 0% { transform: translate(0, 0); opacity: 0; } 7% { opacity: 0.35; } 93% { opacity: 0.35; } 100% { transform: translate(-60vw, -60vw); opacity: 0; } } /* 225¬∞ */
  .hero-content { position: relative; z-index: 1; max-width: 800px; margin: 0 auto; }
  .hero-title { font-size: clamp(2rem, 5vw, 3.5rem); font-weight: 700; margin: 0 0 0.5rem; background: linear-gradient(to right, #22d3ee, #06b6d4, #3b82f6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; filter: drop-shadow(0 0 20px rgba(6,182,212,0.4)); }
  .tagline { font-size: 1.25rem; margin: 0 0 0.5rem; background: linear-gradient(to right, rgba(34,211,238,0.9), #22d3ee, rgba(59,130,246,0.9)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; filter: drop-shadow(0 0 12px rgba(6,182,212,0.3)); }
  .hero-highlights { display: flex; flex-wrap: wrap; gap: 0.5rem 1rem; justify-content: center; margin: 1.5rem 0 2rem; }
  .hero-highlight { display: inline-flex; align-items: center; gap: 0.35rem; padding: 0.4rem 0.75rem; border-radius: 0.5rem; font-size: 0.9rem; color: var(--text-secondary); background: linear-gradient(to right, rgba(6,182,212,0.1), rgba(139,92,246,0.1)); border: 1px solid rgba(34,211,238,0.2); transition: all 0.3s; }
  .hero-highlight:hover { border-color: rgba(34,211,238,0.4); transform: scale(1.05); box-shadow: 0 4px 16px rgba(6,182,212,0.2); color: var(--text-primary); }
  .hl-icon { font-size: 1rem; }
  .cta { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
  .btn { padding: 0.75rem 1.5rem; border-radius: 0.5rem; font-weight: 600; text-decoration: none; transition: all 0.2s; }
  .btn-primary { background: linear-gradient(to right, var(--primary-color), var(--secondary-color)); color: white; border: none; }
  .btn-primary:hover { filter: brightness(1.1); }
  .btn-secondary { background: var(--bg-tertiary); color: var(--text-primary); border: 1px solid var(--border-color); }
  .btn-secondary:hover { border-color: var(--accent-neon); color: var(--accent-neon); }
  .btn-outline { background: transparent; color: var(--text-secondary); border: 1px solid var(--border-color); }
  .btn-outline:hover { border-color: var(--accent-neon); color: var(--accent-neon); }

