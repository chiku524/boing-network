<script>
  /** One wheel tick = one section on homepage. Only runs when html has page-home. */
  (() => {
    if (!document.documentElement.classList.contains('page-home')) return;
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
    const sections = Array.from(document.querySelectorAll('.hero, .section'));
    if (sections.length < 2) return;

    let cooldown = false;
    const COOLDOWN_MS = 600;

    function findCurrentIndex() {
      const mid = window.innerHeight * 0.4;
      for (let i = sections.length - 1; i >= 0; i--) {
        if (sections[i].getBoundingClientRect().top <= mid) return i;
      }
      return 0;
    }

    function goToSection(index) {
      if (index < 0 || index >= sections.length) return;
      sections[index].scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    window.addEventListener('wheel', (e) => {
      if (cooldown) { e.preventDefault(); return; }
      const delta = e.deltaY;
      if (Math.abs(delta) < 20) return; // ignore tiny scrolls

      e.preventDefault();
      const i = findCurrentIndex();
      if (delta > 0) goToSection(Math.min(i + 1, sections.length - 1));
      else goToSection(Math.max(i - 1, 0));

      cooldown = true;
      setTimeout(() => { cooldown = false; }, COOLDOWN_MS);
    }, { passive: false });

    // Allow keyboard navigation
    window.addEventListener('keydown', (e) => {
      if (e.key !== 'ArrowDown' && e.key !== 'ArrowUp' && e.key !== ' ' && e.key !== 'PageDown' && e.key !== 'PageUp') return;
      const i = findCurrentIndex();
      if (e.key === 'ArrowDown' || e.key === 'PageDown' || (e.key === ' ' && !e.shiftKey)) {
        e.preventDefault();
        goToSection(Math.min(i + 1, sections.length - 1));
      } else if (e.key === 'ArrowUp' || e.key === 'PageUp' || (e.key === ' ' && e.shiftKey)) {
        e.preventDefault();
        goToSection(Math.max(i - 1, 0));
      }
    });
  })();
</script>
